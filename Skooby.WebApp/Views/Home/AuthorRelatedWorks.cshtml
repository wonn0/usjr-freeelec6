@model IEnumerable<ASI.Basecode.Services.Models.BookViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = " Author's Work";
}

@section styles {

    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/newbooks.css" />
    <link rel="stylesheet" href="~/css/pagination.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
}


<style>
    .new-books-container {
        width: 740px;
        height: 450px;
    }

    .page-link {
        padding: 0 !important
    }
</style>

<section class="new-books-section new-books-dashboard">
    @{ 
        var author = ViewBag.Authors as List<string>;
    }

    <div>
        <h1>
            @if (author != null && author.Count() == 1)
            {
                @Html.Raw(author[0] + "'s Related Works")
            }
            else if (author != null && author.Count() == 2)
            {
                @Html.Raw(author[0] + " and " + author[1] + "'s Related Works")
            }
            else if (author != null && author.Count() > 2)
            {
                @Html.Raw(string.Join(", ", author.Take(2)) + " and et al. Related Works")
            }
        </h1>
        <h3>Results</h3>
    </div>
 
    <hr />

    <div class="new-books-container" id="book-wrapper">

        <div class="book-wrapper">
            @{
                var booksInGenre = Model;
            }
            @foreach (var book in booksInGenre)
            {
                <div class="book-content">
                    <a href="@Url.Action("ViewBook", "Home", new { id = book.Id })">
                        <div class="book-image-preview">
                            <img class="book-image" src="@book.Image ?? " /img/about-us.png"" alt="@book.Name" />
                        </div>
                    </a>
                    <div class="book-info-card" id="per-book-info-@book.Id">
                        <h5 class="book-title book-text">@book.Name</h5>
                        <p class="author-name book-text">by @string.Join(", ", book.AuthorNames) • @book.PublishedOn.Year</p>
                        <p class="book-description book-text">@book.Description</p>
                    </div>
                </div>
            }

        </div>
    </div>
    <div class="pagination-container">

        <div class="pagination">
            @if (ViewBag.CurrentPage > 5)
            { 
                int previousViewLastPage = ((ViewBag.CurrentPage - 1) / 5) * 5;

                <a href="@Url.Action("AuthorRelatedWorks", "Home", new { pageNo = previousViewLastPage , authors = author})" class="prev-next">&lt;</a>
            }

            @{
                int startPage = ((ViewBag.CurrentPage-1) / 5) * 5 + 1; 
                int endPage = Math.Min(startPage + 4, ViewBag.TotalPages);
            }

            @for (int i = startPage; i <= endPage; i++)
            {
                if (i == ViewBag.CurrentPage)
                {
                    <span class="current-page">@i</span>
                }
                else
                { 
                    <a href="@Url.Action("AuthorRelatedWorks", "Home", new { pageNo = i , authors = author})" class="page-link">@i</a> 
                }
            }
            @if (ViewBag.CurrentPage <= (ViewBag.TotalPages - (ViewBag.TotalPages % 5)) && ViewBag.TotalPages > 5)
            {
                <span>...</span>
            }

            @if (ViewBag.CurrentPage <= (ViewBag.TotalPages - (ViewBag.TotalPages % 5)) && ViewBag.TotalPages > 5)
            {
 
                int nextViewFirstPage = ViewBag.CurrentPage < 6 ? 6 : ((ViewBag.CurrentPage - 1) / 5) * 5 + 6;

                <a href="@Url.Action("AuthorRelatedWorks", "Home", new { pageNo = nextViewFirstPage, authors = author })" class="prev-next">&gt;</a> 
            }
        </div>
    </div>


</section>





<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $(".book-content").hover(
            function () {
                $(this).find(".book-info-card").show();
            },
            function () {
                $(this).find(".book-info-card").hide();
            }
        );
    });
</script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@* JQuery Script for deletion (calls delete method in controller as http) *@
<script>
    $(document).ready(function () {
        $(".btn-danger").click(function () {
            var url = $(this).data("url");
            if (confirm("Are you sure you want to delete this book?")) {
                $.post(url, function (data) {
                    location.reload();
                }).fail(function () {
                    alert('Unable to delete.');
                });
            }
        });
    });
</script>

