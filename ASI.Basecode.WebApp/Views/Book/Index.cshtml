@model IEnumerable<ASI.Basecode.Services.Models.BookViewModel>

@* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous"> *@

@{
    ViewBag.ShowSideBar = true;
    ViewData["Title"] = "Book Management";
}

@section styles {
    <link rel="stylesheet" href="~/css/style.css" />
}


<style>
    .table tbody tr:nth-child(odd) {
        background-color: #f3f3f3;
    }

    .table tbody tr:nth-child(even) {
        background-color: #fff;
    }
</style>
<h2 class="table-title">Book Management</h2>
<div class="table-container">
    <div class="container table-tools">

        <div class="row">

            <div class="col col-left">
                <div class="search-container">
                    <form class="search-container d-flex" role="search" method="get"
                        action="@Url.Action("Index", "Book")">
                        <input class="form-control me-2 search-input" type="search" placeholder="Search Books"
                            aria-label="Search" name="searchQuery">
                        <button class="btn btn-outline-success search-button" type="submit">Search</button>
                    </form>

                </div>
            </div>
            <div class="col col-right">
                <a href="@Url.Action("Create", "Book")" class="btn btn-skooby btn-primary">Add New Book</a>
            </div>
        </div>
    </div>




    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Authors</th>
                <th>Genres</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        @book.Id
                    </td>
                    <td>
                        @book.Name
                    </td>
                    <td>
                        @string.Join(", ", book.AuthorNames)
                    </td>
                    <td>
                        @string.Join(", ", book.GenreNames)
                    </td>
                    <td>
                        <a href="@Url.Action("Details", "Book", new { id = book.Id })"
                            class="btn btn-info btn-primary">Details</a>
                        <a href="@Url.Action("Edit", "Book", new { id = book.Id })"
                            class="btn btn-success btn-primary">Edit</a>
                        <button data-url="@Url.Action("Delete", "Book", new { id = book.Id })" type="button"
                            class="btn btn-danger">
                            Delete
                        </button>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@* JQuery Script for deletion (calls delete method in controller as http) *@
<script>
    $(document).ready(function () {
        $(".btn-danger").click(function () {
            var url = $(this).data("url");
            if (confirm("Are you sure you want to delete this book?")) {
                $.post(url, function (data) {
                    location.reload();
                }).fail(function () {
                    alert('Unable to delete.');
                });
            }
        });
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>