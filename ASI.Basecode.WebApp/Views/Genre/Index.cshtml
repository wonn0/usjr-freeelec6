@model IEnumerable<ASI.Basecode.Services.Models.GenreViewModel>

@{
    ViewBag.Title = "Genre Masterlist";
    ViewBag.ShowSideBar = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .table tbody tr:nth-child(odd) {
        background-color: #f3f3f3;
    }

    .table tbody tr:nth-child(even) {
        background-color: #fff;
    }
</style>

<h2 class="table-title">Genre Masterlist</h2>

<div class="table-container">
    <div class="container table-tools">

        <div class="row">

            <div class="col col-left">
                <div class="search-container">
                    <form class="search-container d-flex" asp-action="Index" method="get">
                        <input type="text" name="searchString" class=" me-2 search-input form-control" placeholder="Search Genres" />
                        <button class="btn btn-outline-success search-button" type="submit">Search</button>

                    </form>
                </div>
            </div>
            <div class="col col-right">
                <a asp-action="Create" class="btn btn-skooby btn-primary">Add New Genre</a>
            </div>
        </div>

    </div>



    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in Model)
            {
                <tr>
                    <td>@genre.Id</td>
                    <td>@genre.Name</td>
                    <td> 
                        <a asp-action="Details" asp-route-id="@genre.Id" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@genre.Id" class="btn btn-success">Edit</a>
                        <button asp-action="Delete" asp-route-id="@genre.Id" class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(".btn-danger").click(function () {
            if (confirm("Are you sure you want to delete this genre?")) {
                var id = $(this).attr("asp-route-id");
                $.post("/Genre/Delete/" + id, function (data) {
                    window.location.href = '/Genre/Index';
                }).fail(function () {
                    alert('Error: Unable to delete.');
                });
            }
        });
    </script>
}
