@using ASI.Basecode.Services.ServiceModels
@model ResetPasswordViewModel
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Register Page";
}

<div class="container py-5 h-100 register-box">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
            <div class="card rounded-3 text-black border-0" style="min-width: 558px; min-height: 589px; box-shadow: 0 4px 4px rgba(0,0,0,0.25); margin-top: 96px;">
                <div class="row g-0">
                    <div class="card-body p-md-5 mx-md-4">

                        <div class="text-center" style="padding-bottom: 39px">
                            <h3 style="color: #B64110; line-height: 48px; font-size: 32px;">Reset Password</h3>
                        </div>

                        <form method="post" action="/Account/ResetPassword" style=" margin-left: 20px; margin-right: 20px;">
                            <input type="hidden" asp-for="UserId" />
                            <input type="hidden" asp-for="Code" />
                            <div class="form-outline mb-4">
                                <!--<label class="form-label" for="password">Password</label>-->
                                <input type="password" id="password" class="form-control"
                                       asp-for="NewPassword" placeholder="Enter new password"
                                       style="background-color: #E7E7E7; border-radius: 10px; " />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <!-- <label class="form-label" for="confirmpassword">Confirm Password</label>-->
                                <input type="password" id="confirmpassword" class="form-control"
                                       asp-for="ConfirmPassword" placeholder="Confirm Password"
                                       style="background-color: #E7E7E7; border-radius: 10px;" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="text-center pt-1 pb-1 d-flex flex-column align-items-center" style="margin-top: 30px">
                                <button class="btn btn-primary btn-block login-btn mb-3" style="border-radius: 20px; background-color: #FF7519; font-size: 20px;" type="submit">
                                    Reset Your Password
                                </button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}