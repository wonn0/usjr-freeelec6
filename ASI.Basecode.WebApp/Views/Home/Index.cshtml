@{
    ViewBag.ShowSideBar = true;
    ViewData["Title"] = "Home";
}
@section styles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/css/landing.css" />
}

<h2 class="module-title">Home</h2>
<div class="container">
    <div class="row">
        <div class="col col-8">
            <div class="module-container">
                <div class="row">
                    <div class="col">
                        <h3 class="module-title">Book Masterlist</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="masterlist-module-title">
                            <a class="module-item-title" asp-controller="Genre" asp-action="Index"><i
                                    class="sidenav-icon fa-solid fa-masks-theater"></i>Genres</a>
                        </div>
                        <div class="masterlist-module-title-odd">
                            <a asp-controller="Book" asp-action="Index"><i class="sidenav-icon fa-solid fa-book"></i>
                                Books</a>
                        </div>
                        <div class="masterlist-module-title">
                            <a asp-controller="Author" asp-action="Index"><i class="sidenav-icon fa-solid fa-feather"></i>
                                Authors</a>
                        </div>
                        <div class="masterlist-module-title-odd">
                            <a asp-controller="Reviews" asp-action="Index">
                                <i class="sidenav-icon fa-solid fa-comment-dots"></i>Reviews</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>